@model Spice.Models.SubCategory
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Sub-Category Details</h2>
<br />

<div class="border backgroundWhite rounded">
    <div class="col-8 ">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Category.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Category.Name" disabled class="form-control"/>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" disabled  class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_DetailsAndBackToListButtons" model="Model.Id" />
                </div>
            </div>
    </div>
